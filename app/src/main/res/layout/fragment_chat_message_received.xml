<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_message_received_user_image"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user_avatar" />

    <TextView
        android:id="@+id/chat_message_received_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/received_message"
        android:maxWidth="200dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/chat_message_received_user_image"
        app:layout_constraintTop_toBottomOf="@+id/chat_message_received_username"
        tools:text="Lorem ipsum doler sit" />

    <TextView
        android:id="@+id/chat_message_received_username"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:paddingLeft="1dp"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/chat_message_received_user_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Anon 123" />
</android.support.constraint.ConstraintLayout>